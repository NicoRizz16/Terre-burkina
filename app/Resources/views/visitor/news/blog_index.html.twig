{% extends 'visitor/base.html.twig' %}

{% block body %}

    {% for post in listPosts %}
        <h2><a href="{{ path('blog_view', {'slug': post.slug}) }}">{{ post.title }}</a></h2>
        <img src="../{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.imageName }}" />
        <span>{{ post.creationDate|localizeddate('none', 'none', app.request.locale, "Europe/Paris", "cccc d MMMM Y") }}</span>

        <p>{{ post.content|striptags|truncate(400, true, "...")|raw }}</p>
        <hr>
    {% else %}
        <p>Pas encore d'articles...</p>
    {% endfor %}

    {% if nbPageTotal > 1 %}
        <div class="text-center">
        <ul class="pagination">
            {% for p in range(1, nbPageTotal) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('blog', {'page':p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    </div>
{% endblock %}


