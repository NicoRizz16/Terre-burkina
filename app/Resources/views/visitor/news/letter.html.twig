                                    <img src="{{ absolute_url(asset(vich_uploader_asset(letter, 'module1Photo'))) }}" alt="{{ letter.module1PhotoName }}" class="img-fluid z-depth-3"/>
                                </div>
                            {% endif %}
                        </div>

                        <!-- MODULE 1 TEXTE -->
                        <div class="col-md-8">
                            {% if letter.module1Content is not null %}
