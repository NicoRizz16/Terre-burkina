{% extends 'visitor/base.html.twig' %}

{% form_theme form 'form/mdbootstrap_form.html.twig' %}

{% block body %}

    <br>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <div class="jumbotron">
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <h4 class="h4-responsive">Contact</h4>
                        </div>
                    </div>
                    <br>
                    <table class="table">
                        <tr>
                            <th>
                                <i class="fa fa-envelope-o fa-2x" aria-hidden="true"></i>
                            </th>
                            <td>
                                Adresse
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <i class="fa fa-phone fa-2x" aria-hidden="true"></i>
                            </th>
                            <td>
                                Téléphone
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <i class="fa fa-at fa-2x" aria-hidden="true"></i>
                            </th>
                            <td>
                                E-mail
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col-md-8">
                <div class="jumbotron">
                    <div class="row">
                        <br>
                        <div class="col-lg-12 text-center">
                            <h3 class="h3-responsive">Nous répondons à toutes vos questions</h3>
                        </div>
                    </div>
                    <hr>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-lg-6">
                            {{ form_row(form.civility) }}
                            <div class="md-form">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="md-form">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="md-form">
                                {{ form_row(form.phone) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="md-form">
                                {{ form_row(form.knowUs) }}
                            </div>
                            <div class="md-form">
                                {{ form_row(form.object) }}
                            </div>
                            <div class="md-form">
                                {{ form_row(form.message) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <fieldset class="form-group">
                                {{ form_widget(form.newsletter) }}
                                {{ form_label(form.newsletter) }}
                            </fieldset>

                            <button type="submit" class="btn btn-brown" formnovalidate>Envoyer</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        {% for message in app.session.flashbag.get('info') %}
            toastr["info"]("{{ message }}");
        {% endfor %}
    </script>
{% endblock %}


