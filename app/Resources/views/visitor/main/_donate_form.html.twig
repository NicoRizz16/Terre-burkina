{% form_theme form 'form/mdbootstrap_form.html.twig' %}

{{ form_start(form) }}
<div>
    <br>
    <div class="row">
        <div class="col-8 push-2">
            <div class="md-form input-group">
                {{ form_widget(form.amount) }}
                <span class="input-group-addon" id="basic-addon1">€</span>
            </div>
            {{ form_errors(form.amount) }}
        </div>
    </div>
</div>
<h3 class="h3-responsive">Moyen de règlement</h3>
<hr>
<div class="btn-group">
    {{ form_widget(form.card) }}
    {{ form_widget(form.cheque) }}
    {{ form_widget(form.transfer) }}
</div>
{{ form_end(form) }}