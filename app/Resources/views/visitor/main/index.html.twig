{% extends 'visitor/base.html.twig' %}

{% block carousel %}
    <!--Carousel Wrapper-->
    <div id="homepageCarousel" class="carousel slide carousel-fade z-depth-1" data-ride="carousel">
        <!--Indicators-->
        <ol class="carousel-indicators">
            <li data-target="#homepageCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#homepageCarousel" data-slide-to="1"></li>
            <li data-target="#homepageCarousel" data-slide-to="2"></li>
            <li data-target="#homepageCarousel" data-slide-to="3"></li>
            <li data-target="#homepageCarousel" data-slide-to="4"></li>
        </ol>
        <!--/.Indicators-->
        <!--Slides-->
        <div class="carousel-inner" role="listbox">
            <!--First slide-->
            <div class="carousel-item active">
                <div class="view hm-black-slight">
                    <img src="{{ absolute_url(asset('img/accueil1.jpg')) }}" alt="Photos d'enfants" class="img-fluid">
                    <div class="mask"></div>
                </div>
                <div class="carousel-caption hidden-sm-down">
                    <h3 class="h3-responsive"><strong><i>Rejoignez le mouvement : parrainez un enfant !</i></strong></h3>
                </div>
                <div class="carousel-caption hidden-md-up">
                    <p style="font-size: 0.7em;"><i>Rejoignez le mouvement : parrainez un enfant !</i></p>
                </div>
            </div>
            <!--/First slide-->
            <!--Second slide-->
            <div class="carousel-item">
                <img src="{{ absolute_url(asset('img/accueil2.jpg')) }}" alt="Paysage" class="img-fluid">
                <div class="carousel-caption hidden-sm-down">
                    <h3 class="h3-responsive"><strong><i>« Un livre, un stylo, un enfant et un professeur peuvent changer le monde », Malala Yousafzai.</i></strong></h3>
                </div>
                <div class="carousel-caption hidden-md-up">
                    <p style="font-size: 0.7em;"><i>« Un livre, un stylo, un enfant et un professeur peuvent changer le monde », Malala Yousafzai.</i></p>
                </div>
            </div>
            <!--/Second slide-->
            <!--Third slide-->
            <div class="carousel-item">
                <div class="view hm-black-slight">
                    <img src="{{ absolute_url(asset('img/accueil3.jpg')) }}" alt="Enfants qui courent" class="img-fluid">
                    <div class="mask"></div>
                </div>
                <div class="carousel-caption hidden-sm-down">
                    <h3 class="h3-responsive"><strong><i>En route vers l'école !</i></strong></h3>
                </div>
                <div class="carousel-caption hidden-md-up">
                    <p style="font-size: 0.7em;"><i>En route vers l'école !</i></p>
                </div>
            </div>
            <!--/Third slide-->
            <!--Slide 4-->
            <div class="carousel-item">
                <div class="view hm-black-slight">
                    <img src="{{ absolute_url(asset('img/accueil4.jpg')) }}" alt="Classe d'école" class="img-fluid">
                    <div class="mask"></div>
                </div>
                <div class="carousel-caption hidden-sm-down">
                    <h3 class="h3-responsive"><strong><i>L'avenir est entre nos mains !</i></strong></h3>
                </div>
                <div class="carousel-caption hidden-md-up">
                    <p style="font-size: 0.7em;"><i>L'avenir est entre nos mains !</i></p>
                </div>
            </div>
            <!--/Slide 4-->
            <!--Slide 5-->
            <div class="carousel-item">
                <div class="view hm-black-slight">
                    <img src="{{ absolute_url(asset('img/accueil5.jpg')) }}" alt="Photo bâtiment" class="img-fluid">
                    <div class="mask"></div>
                </div>
                <div class="carousel-caption hidden-sm-down">
                    <h3 class="h3-responsive"><strong><i>« L'éducation est l'arme la plus puissante qu'un puisse utiliser pour changer le monde », Nelson Mandela.</i></strong></h3>
                </div>
                <div class="carousel-caption hidden-md-up">
                    <p style="font-size: 0.7em;"><i>« L'éducation est l'arme la plus puissante qu'un puisse utiliser pour changer le monde », Nelson Mandela.</i></p>
                </div>
            </div>
            <!--/Slide 5-->
        </div>
        <!--/.Slides-->
        <!--Controls-->
        <a class="carousel-control-prev" href="#homepageCarousel" role="button" data-slide="prev">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#homepageCarousel" role="button" data-slide="next">
            <i class="fa fa-chevron-right" aria-hidden="true"></i>
            <span class="sr-only">Next</span>
        </a>
        <!--/.Controls-->
    </div>
    <!--/.Carousel Wrapper-->
{% endblock %}


{% block body %}
    <i id="topMenuInfo">homepage</i>

    <div class="container-fluid white">
        <br>
        <section id="homepageLinks">
            <div class="row">

                <!--First columnn-->
                <div class="col-lg-3">
                    <!--Card-->
                    <div class="card">

                        <!--Card content-->
                        <div class="card-block text-center">
                            <!--Title-->
                            <h4 class="card-title">Nos Actions</h4>
                            <hr>
                            <!--Text-->
                            <p class="card-text">De nombreux projets entourent nos parrainages : campagnes de sensibilisation, projets culturels, soutiens à des initiatives locales…</p>
                            <a href="{{ path('nos_actions') }}" class="btn btn-brown">En savoir plus</a>
                        </div>
                        <!--/.Card content-->

                    </div>
                    <!--/.Card-->
                </div>
                <!--First columnn-->

                <!--Second columnn-->
                <div class="col-lg-3">
                    <!--Card-->
                    <div class="card">

                        <!--Card content-->
                        <div class="card-block text-center">
                            <!--Title-->
                            <h4 class="card-title">Les Parrainages</h4>
                            <hr>
                            <!--Text-->
                            <p class="card-text">Parrainez un enfant avec Terre Burkina, correspondez avec lui, suivez ses progrès. Ensemble, donnons-leur les clefs de l’école.</p>
                            <a href="{{ path('sponsorship_presentation') }}" class="btn btn-brown">En savoir plus</a>
                        </div>
                        <!--/.Card content-->

                    </div>
                    <!--/.Card-->
                </div>
                <!--Second columnn-->

                <!--Third columnn-->
                <div class="col-lg-3">
                    <!--Card-->
                    <div class="card">

                        <!--Card content-->
                        <div class="card-block text-center">
                            <!--Title-->
                            <h4 class="card-title">La Maison de Luc</h4>
                            <hr>
                            <!--Text-->
                            <p class="card-text">A Koudougou, cette maison accueille 16 jeunes filles. Grâce à ce parrainage particulier, en route pour le lycée !</p>
                            <a href="{{ path('maison_de_luc') }}" class="btn btn-brown">En savoir plus</a>
                        </div>
                        <!--/.Card content-->

                    </div>
                    <!--/.Card-->
                </div>
                <!--Third columnn-->

                <!--First columnn-->
                <div class="col-lg-3">
                    <!--Card-->
                    <div class="card">

                        <!--Card content-->
                        <div class="card-block text-center">
                            <!--Title-->
                            <h4 class="card-title">L'Arbre à Palabre</h4>
                            <hr>
                            <!--Text-->
                            <p class="card-text">Sous cet arbre, on discute, on échange. Retrouvez ici, la newsletter de Terre Burkina</p>
                            <a href="{{ path('letter') }}" class="btn btn-brown">En savoir plus</a>
                        </div>
                        <!--/.Card content-->

                    </div>
                    <!--/.Card-->
                </div>
                <!--First columnn-->
            </div>
        </section>
        <br>
    </div>


    <div class="container">

        <div class="divider-new white-text" id="homepageDivider">
            <h2 class="h2-responsive wow fadeInDown" style="visibility: visible; animation-name: fadeInDown;">Derniers articles</h2>
        </div>

        <section id="lastPosts">
            <div class="row">

                {% for post in lastPosts %}
                    <div class="col-md-4">
                        <!--Card-->
                        <div class="card wow fadeInUp mb-2" style="visibility: visible; animation-name: fadeInUp;">

                            <!--Card image-->
                            <div class="view overlay hm-white-slight">
                                {% if post.imageFile is not null %}
                                    <img src="{{ absolute_url(asset(vich_uploader_asset(post, 'imageFile'))) }}" class="img-fluid" alt="{{ post.imageName }}">
                                {% else %}
                                    <img src="{{ absolute_url(asset('img/no-photo.jpg')) }}" class="img-fluid" alt="Photo vide">
                                {% endif %}
                                <a href="{{ path('blog_view', {'slug': post.slug}) }}">
                                    <div class="mask"></div>
                                </a>
                            </div>
                            <!--/.Card image-->

                            <!--Card content-->
                            <div class="card-block text-center">
                                <!--Title-->
                                <h4 class="card-title">{{ post.title }}</h4>
                            </div>
                            <!--/.Card content-->

                        </div>
                        <!--/.Card-->
                    </div>
                {% else %}
                    <div class="col-md-6 push-md-3">
                        <!--Card-->
                        <div class="card wow fadeInUp mb-2" style="visibility: visible; animation-name: fadeInUp;">

                            <!--Card content-->
                            <div class="card-block text-center">
                                <!--Title-->
                                <h4 class="card-title">Aucun article pour le moment</h4>
                            </div>
                            <!--/.Card content-->

                        </div>
                        <!--/.Card-->
                    </div>
                {% endfor %}

            </div>
        </section>

    </div>
{% endblock %}


