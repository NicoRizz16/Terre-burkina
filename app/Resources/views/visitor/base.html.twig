{% set abs_url = app.request.scheme ~'://' ~ app.request.httpHost %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="{{ abs_url ~ asset('img/logo.png') }}" />

    {# ============= TITLE ============= #}
    <title>{% block title %}Terre Burkina{% endblock %}</title>

    {# ============= STYLES ============= #}
    {% block stylesheets %}
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">

        {% stylesheets filter='cssrewrite, ?scssphp'
        'css/bootstrap.min.css'
        'css/visitor/style.css'
        'css/mdb.min.css'
        output='css/visitor/compiled/app.css'%}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
    {% endblock %}

</head>

<body>

{# ===========================================================
===========================  MENU ==========================
============================================================ #}

    <nav class="navbar navbar-toggleable-md navbar-light white">
        <div class="container">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav1" aria-controls="navbarNav1" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a href="#" class="navbar-brand">
                <img src="{{ abs_url ~ asset('img/logo.png') }}" class="logo"/>
            </a>
            <div class="collapse navbar-collapse" id="navbarNav1">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link">L'association <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown btn-group">
                        <a class="nav-link dropdown-toggle" id="sponsorshipDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Les parrainages</a>
                        <div class="dropdown-menu dropdown" aria-labelledby="sponsorshipDropdown">
                            <a class="dropdown-item" href="{{ path('sponsorship_presentation') }}">Présentation</a>
                            <a class="dropdown-item">Système scolaire</a>
                            <a class="dropdown-item">Photos</a>
                            <a class="dropdown-item" href="{{ path('sponsorship_request') }}">Devenir parrain</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">Nos actions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">La maison de Luc</a>
                    </li>
                    <li class="nav-item dropdown btn-group">
                        <a class="nav-link dropdown-toggle" id="sponsorshipDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actualités</a>
                        <div class="dropdown-menu dropdown" aria-labelledby="sponsorshipDropdown">
                            <a class="dropdown-item" href="{{ path('blog') }}">Blog</a>
                            <a class="dropdown-item" href="{{ path('letter') }}">L'arbre à palabre</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">Faire un don</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main>
        {% block body %}
        {% endblock %}
    </main>

    <footer>
        <div id="footerBlock1">

        </div>
        <div id="footerBlock2">
            <div>
                <a href="{{ path('contact') }}">Contactez-nous</a>
                {% if is_granted('ROLE_MODERATOR') %}
                    <a href="{{ path('admin_board') }}">Accès à l'espace admin</a>
                {% else %}
                    <a href="{{ path('fasoma_homepage') }}">Accès à l'espace parrain</a>
                {% endif %}
            </div>
            <div>
                <p>© Copyright Terre Burkina {{ 'now'|date('Y') }}</p>
            </div>
        </div>
    </footer>

    {# ============= SCRIPTS ============= #}
    {% block javascripts %}

        {% javascripts filter='?jsqueeze'
        'js/jquery-2.2.3.min.js'
        'js/tether.min.js'
        'js/bootstrap.min.js'
        'js/mdb.min.js'
        'js/visitor/main.js'
        output='js/visitor/compiled/app.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}

</body>
</html>