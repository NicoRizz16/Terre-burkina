{% set abs_url = app.request.scheme ~'://' ~ app.request.httpHost %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="{{ abs_url ~ asset('img/logo.png') }}" />

    {# ============= TITLE ============= #}
    <title>{% block title %}Terre Burkina{% endblock %}</title>

    {# ============= STYLES ============= #}
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

        {% stylesheets filter='cssrewrite, ?scssphp'
        'css/visitor/style.css'
        output='css/visitor/compiled/app.css'%}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
    {% endblock %}

</head>

<body>
    <div class="container-fluid">

        {# ===========================================================
        ===========================  HEADER ==========================
        ============================================================ #}
        <header>
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="#"><img src="{{ abs_url ~ asset('img/logo.png') }}" class="logo"/></a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">L'association</a></li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Les parrainages
                                    <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Présentation</a></li>
                                    <li><a href="#">Système scolaire</a></li>
                                    <li><a href="#">Photos</a></li>
                                    <li><a href="#">Devenir parrain</a></li>
                                </ul>
                            </li>
                            <li><a href="#">Nos actions</a></li>
                            <li><a href="#">La maison de Luc</a></li>
                            <li><a href="{{ path('blog') }}">Blog</a></li>
                            <li><a href="#">L'arbre à palabre</a></li>
                            <li><a href="#">Faire un don</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container" id="bodyContainer">
        {% block body %}
        {% endblock %}
        </div>

    <footer>
        <div id="footerBlock1">

        </div>
        <div id="footerBlock2">
            <div>
                <a href="#">Contactez-nous</a>
                {% if is_granted('ROLE_MODERATOR') %}
                    <a href="{{ path('admin_board') }}">Accès à l'espace admin</a>
                {% else %}
                    <a href="{{ path('fasoma_homepage') }}">Accès à l'espace parrain</a>
                {% endif %}
            </div>
            <div>
                <p>© Copyright Terre Burkina {{ 'now'|date('Y') }}</p>
            </div>
        </div>
    </footer>
    </div>

    {# ============= SCRIPTS ============= #}
    {% block javascripts %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

        {% javascripts filter='?jsqueeze'
        'js/visitor/main.js'
        output='js/visitor/compiled/app.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}

</body>
</html>