
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="{{ absolute_url(asset('img/logo.png')) }}" />

    {# ============= TITLE ============= #}
    <title>{% block title %}Demande de parrainage{% endblock %}</title>

    {# ============= STYLES ============= #}
    {% block stylesheets %}
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">

        {% stylesheets filter='cssrewrite, ?scssphp'
        'css/bootstrap.min.css'
        'css/visitor/style.css'
        'css/mdb.min.css'
        output='css/visitor/compiled/app.css'%}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
    {% endblock %}

</head>

<body>

    <div style="position: fixed; top: 20px; left:20px;">
        <a href="{{ path('homepage') }}" class="btn-floating btn-large brown"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
    </div>

    <header>
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <br>
                    <img src="{{ absolute_url(asset('img/logo.png')) }}" style="width: 100px;"/>
                    <br><br>
                    <h2 class="h2-responsive white-text">Informations sur le parrainage</h2>
                    <br>
                </div>
            </div>
        </div>
    </header>


    <main>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="jumbotron">

                        <!-- Nav tabs -->
                        <div class="row">
                            <div class="col-lg-3">
                                <ul class="nav nav-tabs md-pills pills-ins flex-column" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#panel41" role="tab"><i class="fa fa-archive fa-2x"></i><br> Les parrainages</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#panel42" role="tab"><i class="fa fa-child fa-2x"></i><br> Mon filleul</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#panel43" role="tab"><i class="fa fa-credit-card fa-2x"></i><br> Versements</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-9">
                                <!-- Tab panels -->
                                <div class="tab-content vertical">
                                    <!--Panel "Les parrainages"-->
                                    <div class="tab-pane fade in show active" id="panel41" role="tabpanel">
                                        <hr class="hidden-lg-up">
                                        <h3 class="h3-responsive">Les parrainages</h3>
                                        <hr>
