                                    </div>
                                    <!--/.Panel 3-->
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>


<!--Footer-->
<footer class="page-footer center-on-small-only brown darken-3" style="padding-top: 0px;">

    <!--Copyright-->
    <div class="footer-copyright">
        <div class="container-fluid">
            © Copyright Terre Burkina {{ 'now'|date('Y') }}
        </div>
    </div>
    <!--/.Copyright-->

</footer>
<!--/.Footer-->


<!-- NewsletterModal -->
<div class="modal fade" id="newsletterModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="newsletterModalTitle"></h4>
            </div>
            <div class="modal-body">
                <p id="newsletterModalBody"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-brown" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>


{# ============= SCRIPTS ============= #}
{% block javascripts %}

    {% javascripts filter='?jsqueeze'
    'js/jquery-2.2.3.min.js'
    'js/tether.min.js'
    'js/bootstrap.min.js'
    'js/mdb.min.js'
    'js/visitor/main.js'
    output='js/visitor/compiled/app.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        $(function () {
            new WOW().init();
        });
