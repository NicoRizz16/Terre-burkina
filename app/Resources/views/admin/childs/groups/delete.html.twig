{% extends "admin/childs/layout.html.twig" %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block admin_body %}

    <i id="menuLeftInfo">groups</i>

    <div class="buttonsBar">
        <a href="{{ path('admin_childs_groups') }}" class="btn btn-primary"><span class="glyphicon glyphicon-chevron-left"></span> Retour à la liste</a>
    </div>

    <div class="col-md-7 col-md-offset-2 text-center">
        <h1>Supprimer un groupe</h1>
        <p>Êtes-vous sûr de vouloir supprimer le groupe "{{ childGroup.name }}" ?</p>
        <div class="marginTop25">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-danger marginTop25" formnovalidate>Supprimer le groupe</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}