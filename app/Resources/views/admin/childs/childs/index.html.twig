{% extends "admin/childs/layout.html.twig" %}

{% block admin_body %}

    <i id="menuLeftInfo">childs</i>

    <div class="buttonsBar">
        <a href="{{ path('admin_childs_add') }}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Ajouter</a>
    </div>

    {% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-info marginTop25"><span class="glyphicon glyphicon-info-sign"></span> {{ message }}</div>
    {% endfor %}
    {% for message in app.session.flashbag.get('error') %}
        <div class="alert alert-danger marginTop25"><span class="glyphicon glyphicon-warning-sign"></span> {{ message }}</div>
    {% endfor %}

    <table class="table table-striped marginTop25">
        <tr>
            <th></th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Age</th>
            <th>Début parrainage</th>
            <th>Fin parrainage</th>
            <th>Parrain</th>
        </tr>

        {% for child in childsList %}
            <tr>
                <td>
                    <a href="{{ path('admin_childs_view_infos', {'id': child.id}) }}" class="btn btn-info btn-sm"><i class="fa fa-eye" aria-hidden="true"></i></a>
                </td>
                <td>
                    {{ child.firstName }}
                </td>
                <td>
                    {{ child.lastName|upper }}
                </td>
                <td>
                    {{ child.getAge }} ans
                </td>
                <td>
                    {{ child.sponsorshipStart|date('d/m/Y') }}
                </td>
                <td>
                    {{ child.sponsorshipEnd|date('d/m/Y') }}
                </td>
                <td>
                    {% if child.sponsor is not null %}
                        <a href="{{ path('admin_sponsors_view_infos', {'id': child.sponsor.id}) }}" class="btn btn-success btn-sm">{{ child.sponsor.firstName }} {{ child.sponsor.lastName }}</a>
                    {% else %}
                        <a href="#" class="btn btn-danger btn-sm">Non parrainé</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td>
                    Aucun filleul enregistré pour le moment...
                </td>
            </tr>
        {% endfor %}
    </table>

    {% if nbPageTotal > 1 %}
        <div class="text-center">
            <ul class="pagination">
                {% for p in range(1, nbPageTotal) %}
                    <li{% if p == page %} class="active"{% endif %}>
                        <a href="{{ path('admin_childs', {'page':p}) }}">{{ p }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

{% endblock %}