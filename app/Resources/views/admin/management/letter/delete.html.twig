{% extends "admin/management/layout.html.twig" %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block admin_body %}

    <i id="menuLeftInfo">letter</i>

    <div class="buttonsBar">
        <a href="{{ path('admin_management_letters') }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Retour à la liste</a>
    </div>

    <div class="col-md-7 col-md-offset-2 text-center">
        <h3>Supprimer une lettre</h3>
        <p>Êtes-vous sûr de vouloir supprimer la lettre du {{ letter.creationDate|date('d/m/Y') }} ?</p>
        <div class="marginTop25">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-danger marginTop25" formnovalidate>Supprimer</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}