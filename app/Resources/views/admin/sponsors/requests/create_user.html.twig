{% extends "admin/sponsors/layout.html.twig" %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block admin_body %}

    <i id="menuLeftInfo">requests</i>

    <div class="buttonsBar">
        <a href="{{ path('admin_sponsors_requests') }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Retour à la liste</a>
    </div>

    <div class="col-md-8 col-md-offset-2 text-center">
        <h3>Êtes-vous sûr de vouloir créer un compte pour "{{ sponsorshipRequest.firstName }} {{ sponsorshipRequest.lastName }}" ?</h3>
        <p>Cette action entraînera la suppression de la demande de parrainage et l'envois automatique des données de connexion au compte à l'adresse e-mail associée à la demande.</p>
        <div class="marginTop25">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-info marginTop25 marginBottom30" formnovalidate>Créer</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}