            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-danger marginTop25" formnovalidate>Supprimer l'utilisateur</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}