{% extends "admin/users/layout.html.twig" %}

{% block admin_body %}

    <i id="menuLeftInfo">utilisateurs</i>

    {% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-info marginTop25">{{ message }}</div>
    {% endfor %}

    <table class="table table-striped marginTop25">
        <tr>
            <th>Nom d'utilisateur</th>
            <th>Adresse email</th>
            <th>Dernière connexion</th>
            <th>Rôle</th>
            <th>Etat</th>
        </tr>

        {% for user in usersList %}
            <tr>
                <td>
                    {{ user.username }}
                </td>
                <td>
                    {{ user.email }}
                </td>
                <td>
                    {{ user.lastLogin|date('d/m/Y') }}
                </td>
                <td>
                    {% if 'ROLE_ADMIN' in user.roles %}
                        Administrateur
                    {% elseif 'ROLE_MODERATOR' in user.roles %}
                        Modérateur
                    {% elseif 'ROLE_SPONSOR' in user.roles %}
                        Parrain
                    {% elseif 'ROLE_COORDINATOR' in user.roles %}
                        Coordinateur
                    {% elseif 'ROLE_USER' in user.roles %}
                        Rôle non défini
                    {% endif %}
                </td>
                <td>
                    <div class="btn-group">
                        {% if user.enabled %}
                            <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                                Activé <span class="caret"></span></button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('admin_users_toggle_state', {'id' : user.id}) }}">Désactiver</a></li>
                            </ul>
                        {% else %}
                            <button type="button" class="btn btn-warning btn-sm dropdown-toggle" data-toggle="dropdown">
                                Désactivé <span class="caret"></span></button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('admin_users_toggle_state', {'id' : user.id}) }}">Activer</a></li>
                            </ul>
                        {% endif %}
                    </div>
                </td>
                {#
                <td>
                    <div class="btn-group">
                        {% if post.published %}
                            <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                                Publié <span class="caret"></span></button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('admin_blog_post_toggle_published', {'id': post.id}) }}">Mettre en attente</a></li>
                            </ul>
                        {% else %}
                            <button type="button" class="btn btn-warning btn-sm dropdown-toggle" data-toggle="dropdown">
                                En attente <span class="caret"></span></button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('admin_blog_post_toggle_published', {'id': post.id}) }}">Publier</a></li>
                            </ul>
                        {% endif %}
                    </div>
                </td>
                <td>
                    <a href="{{ path('admin_blog_post_edit', {'id': post.id}) }}" class="btn btn-primary btn-sm" title="Modifier"><span class="glyphicon glyphicon-edit"></span></a>
                    <a href="{{ path('admin_blog_post_delete', {'id': post.id}) }}" class="btn btn-danger btn-sm" title="Supprimer"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
                #}
            </tr>
        {% else %}
            <tr>
                <td>
                    Aucun utilisateur enregistré pour le moment...
                </td>
            </tr>
        {% endfor %}
    </table>

    {% if nbPageTotal > 1 %}
        <div class="text-center">
        <ul class="pagination">
            {% for p in range(1, nbPageTotal) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('admin_users', {'page':p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
        </div>
    {% endif %}

{% endblock %}