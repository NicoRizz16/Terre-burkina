{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}

    <div class="col-sm-6 col-sm-offset-3 marginTop25">

        <div class="panel panel-default">
            <div class="panel-heading">Récupérer mon mot de passe</div>
            <div class="panel-body">

                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                    <div class="form-group">
                        <label for="username">Entrez votre nom d'utilisateur :</label>
                        <input type="text" id="username" class="form-control" name="username" required="required" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Réinitialiser mon mot de passe" class="btn btn-default"/>
                    </div>
                </form>

            </div>
        </div>
    </div>

{% endblock fos_user_content %}
