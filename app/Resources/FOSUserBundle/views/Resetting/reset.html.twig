{% extends "@FOSUser/layout.html.twig" %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block fos_user_content %}

    <div class="col-sm-6 col-sm-offset-3 marginTop25">

        <div class="panel panel-default">
            <div class="panel-heading">Nouveau mot de passe</div>
            <div class="panel-body">

                {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
                {{ form_row(form.plainPassword.first, {'label': 'Mot de passe :'}) }}
                {{ form_row(form.plainPassword.second, {'label': 'Confirmation :'}) }}
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Enregistrer" formnovalidate/>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock fos_user_content %}

