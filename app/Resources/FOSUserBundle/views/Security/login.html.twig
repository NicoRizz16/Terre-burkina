{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}

<div class="col-sm-6 col-sm-offset-3 marginTop25">

    <div class="panel {% if error %} panel-danger {% else %} panel-default {% endif %}">
        <div class="panel-heading">Connexion à l'espace Fasoma</div>
        <div class="panel-body">

            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group">
                    <label for="username">Nom d'utilisateur :</label>
                    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input type="password" id="password" class="form-control" name="_password" required="required" />
                </div>

                <div class="checkbox">
                    <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    Se souvenir de moi</label>
                </div>

                <div class="submit-login-group marginTop25">
                    <button type="submit" id="_submit" class="btn btn-default" name="_submit" formnovalidate><span class="glyphicon glyphicon-lock"></span> Connexion</button>
                    <a href="{{ path('fos_user_resetting_request') }}">J'ai oublié mon mot de passe</a>
                </div>
            </form>
        </div>
    </div>
    {% if error %}
        <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Le nom d'utilisateur ou le mot de passe est invalide.</div>
    {% endif %}
</div>

{% endblock fos_user_content %}
